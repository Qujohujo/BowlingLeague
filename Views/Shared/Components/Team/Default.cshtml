@{
}

@model IEnumerable<Teams>

<a asp-action="Index" asp-controller="Home" asp-route-teamid="@null" asp-route-teamname="@null" 
   class="btn btn-block @(ViewBag.SelectedTeam == null ? "btn-primary" : "btn-outline-secondary")">
    Home
</a>

<br />

@foreach (var team in Model)
{
    <!--print a link out for each team name from the database-->
    <a class="btn btn-block @(team.TeamName == ViewBag.SelectedTeam ? "btn-primary" : "btn-outline-secondary")"
       asp-action="Index"
       asp-controller="Home"
       asp-route-teamid="@team.TeamId"
       asp-route-teamname="@team.TeamName"
       asp-route-pagenum="1">
        @team.TeamName
    </a>
}